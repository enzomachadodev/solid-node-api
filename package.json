  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "start:dev": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register src/server.ts' -e ts",
    "husky:prepare": "husky install",
    "test": "jest --config jest.config.unit.js src/use-cases --passWithNoTests",
    "test:e2e": "jest --passWithNoTests --config jest.config.e2e.js --testPathPattern src/http",
    "test:watch": "npm run test --watchAll",
    "test:staged": "npm run test && npm run test:e2e",
    "test:push": "npm run test && npm run test:e2e --coverage "
  },
